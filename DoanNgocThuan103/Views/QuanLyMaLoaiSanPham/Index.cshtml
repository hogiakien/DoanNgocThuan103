@using DoanNgocThuan103.Models;
@model IEnumerable<MaLoaiSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";

    // Khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}
@if (TempData["ThongBao"] == "Xóa thành công")
{
    <br />
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Xóa thành công!</strong>
    </div>
}
@if (TempData["ThongBao"] == "Chỉnh sửa thành công")
{
    <br />
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Chỉnh sửa thành công!</strong>
    </div>
}
@if (TempData["ThongBao"] == "Thêm thành công")
{
    <br />
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Thêm thành công!</strong>
    </div>
}
@if (TempData["ThongBao"] == "Hoàn tác thành công")
{
    <br />
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Hoàn tác thành công!</strong>
    </div>
}
@Html.ActionLink("Thêm mới Mã Loại", "TaoMoi", null, new { @class = "btn btn-success" })
@Html.ActionLink("Danh sách Danh Mục đã xóa", "DanhMucDaXoa", null, new { @class = "btn btn-success" })
<br /><br />
@*Thể hiện dữ liệu thông qua control webGrid*@
@grid.GetHtml(
    tableStyle: "table table-bordered",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("IdMLSP", "Mã loại SP"),
    grid.Column("TenLSP", "Tên loại"),
   
     grid.Column("ThongTin", "Thông Tin"),

    grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.IdMLSP }, new { @class = "btn btn-success" })),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.IdMLSP }, new { @class = "btn btn-danger" }))
    ))

@*Css cho từng Style của table*@
<style>
    .divTable {
        width: 100%;
        border: 1px solid #999999;
        text-align: center;
    }

        .divTable td {
        }

    .gridHead {
        background-color: #4CAF50;
    }

        .gridHead > th > a {
            color: #fff;
        }

        .gridHead > th {
            color: #fff;
            text-align: center;
        }

    .gridFooter {
        font-weight: bold;
        color: red;
    }
</style>



