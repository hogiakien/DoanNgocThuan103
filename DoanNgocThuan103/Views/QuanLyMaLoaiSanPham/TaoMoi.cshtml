@model DoanNgocThuan103.Models.MaLoaiSanPham

@{
    ViewBag.Title = "Thêm mã loại";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<h2 style="font-weight:bold;text-align:center">Thêm mã loại</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.TenLSP, "Tên Loại", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenLSP)
            @Html.ValidationMessageFor(model => model.TenLSP)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ThongTin, "Thông Tin", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ThongTin)
            @Html.ValidationMessageFor(model => model.ThongTin)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="HinhAnh" id="HinhAnh" />
            <span id="tbHinhAnh" style="color: red;"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
