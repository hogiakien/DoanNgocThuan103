@model DoanNgocThuan103.Models.ThanhVien
@{
    /**/

    ViewBag.Title = "add";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    var loaitv = (List<DoanNgocThuan103.Models.LoaiThanhVien>)ViewBag.LoaiTV;
}

<div id="page-wrapper" style="min-height: 307px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm mới thành viên</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @*Basic Form Elements*@
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("frmAdd", "ThanhVien", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @*<h4>ThanhVien</h4>*@
                                    <hr />
                                    <div class="form-group">
                                        <label>Tài khoản</label>
                                        <input type="text" class="form-control" name="TaiKhoan">
                                    </div>

                                    <div class="form-group">
                                        <label>Mật khẩu</label>
                                        <input type="password" class="form-control" name="MatKhau">
                                    </div>

                                    <div class="form-group">
                                        <label>Họ và tên</label>
                                        <input type="text" class="form-control" name="HoTen">
                                    </div>

                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        <input type="text" class="form-control" name="DiaChi">
                                    </div>

                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control" name="Email">
                                    </div>

                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <input type="text" class="form-control" name="SoDienThoai">
                                    </div>

                                    <div class="form-group">
                                        <label>Loại thành viên</label>
                                        <select name="MaLoaiTV" class="form-control">
                                            @foreach (var item in loaitv)
                                            {
                                                <option value="@item.MaLoaiTV">@item.TenLoai</option>
                                            }
                                        </select>

                                    </div>
                                    <button type="submit" class="btn btn-default">Thêm mới</button>
                                    <button type="reset" class="btn btn-default">Reset</button>
                                </div>
                            }
                            @*<form role="form">
                                    <div class="form-group">
                                        <label>Text Input</label>
                                        <input class="form-control">
                                    </div>
                                    <button type="submit" class="btn btn-default">Thêm mới</button>
                                    <button type="reset" class="btn btn-default">Reset</button>
                                </form>*@
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>

