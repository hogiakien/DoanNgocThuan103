@model DoanNgocThuan103.Models.ThanhVien
@{
    ViewBag.Title = "edit";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    var loaitv = (List<DoanNgocThuan103.Models.LoaiThanhVien>)ViewBag.LoaiTV;
}

<div id="page-wrapper" style="min-height: 307px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Sửa loại thành viên</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @*Basic Form Elements*@
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @using (Html.BeginForm("frmEdit", "ThanhVien", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <input type="hidden" name="MaThanhVien" value="@Model.MaThanhVien" />
                                    @Html.HiddenFor(model => model.MaThanhVien)

                                    <div class="form-group">
                                        <label>Loại thành viên</label>
                                        <select name="MaLoaiTV" class="form-control">
                                            @foreach (var item in loaitv)
                                            {
                                                if (item.MaLoaiTV == Model.MaLoaiTV)
                                                {
                                                    <option value="@item.MaLoaiTV" selected>@item.TenLoai</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.MaLoaiTV">@item.TenLoai</option>
                                                }
                                            }
                                        </select>

                                    </div>
                                    <button type="submit" class="btn btn-default">Sửa</button>
                                    <div class="col-md-offset-2 col-md-10">
                                        @Html.ActionLink("Quay lại", "Index")
                                    </div>
                                }
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>


